# Add a check if the repo exist, if not, git clone it maybe?
source "$HOME/repos/zsh-autosuggestions/zsh-autosuggestions.zsh"
source "$HOME/repos/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"
source "$HOME/repos/zsh-autocomplete/zsh-autocomplete.plugin.zsh"

if [ "$HOST" = "PY60HY3QW3" ]; then
  source "$HOME/.iterm2_shell_integration.zsh"
fi

local REPOS=(
$HOME/projects/personal/cv
$HOME/projects/personal/health
$HOME/wiki
$HOME/projects/work/ems/
$HOME/projects/work/scripts
$HOME/projects/libs/conor-lib
$HOME/projects/libs/equinix-lib
$HOME/.local/share/chezmoi
)

for REPO in "${REPOS[@]}"; do
	if [[ -d "$REPO/.git" ]]; then
		if [[ $(git -C "$REPO" status --porcelain) ]]; then
			echo "You have unpushed changes in $REPO"
		fi
	else
		echo "$REPO is not a Git repository"
	fi
done

