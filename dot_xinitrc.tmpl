# set up monitors
xrandr --output {{ .hosts.desktop.monitor_240hz }} --primary --mode 1920x1080 --rate 239.76 --output {{ .hosts.desktop.monitor_144hz }} --mode 1920x1080 --rate 144 --right-of {{ .hosts.desktop.monitor_240hz }}

# set the wallpaper
xsetroot -solid webgray

# set the cursor
xrdb -merge ~/.Xresources
xsetroot -cursor_name left_ptr

# set keyboard layout
setxkbmap ie

# set start the panel
polybar left &
polybar right &

# remove the cursor when it's doing nothing
unclutter --jitter 25 &

# save my eyes, even if it's placebo
redshift &

dunst &

sxhkd &

while true; do
  bspwm || break
done
